#include <iostream>
using namespace std;


void tambah(int angka1, int angka2){
    cout << "Tambah" << angka1 - angka2 << endl;
}

void kurang(int angka1, int angka2){
    cout << "Kurang" << angka1 - angka2 << endl;
}

void kali(int angka1, int angka2){
    cout << "Kali" << angka1 - angka2 << endl;
}

void bagi(int angka1, int angka2){
    cout << "Bagi" << angka1 - angka2 << endl;
}
int main() {
    char op;
    float num1, num2;

    cout << "Masukkan operator (+, -, *, /): ";
    cin >> op;

    cout << "Masukkan dua angka: ";
    cin >> num1 >> num2;

    switch(op) {
        case '+':
            cout << "Hasil penambahan: " << num1 + num2;
            break;
        case '-':
            cout << "Hasil pengurangan: " << num1 - num2;
            break;
        case '*':
            cout << "Hasil perkalian: " << num1 * num2;
            break;
        case '/':
            if(num2 != 0)
                cout << "Hasil pembagian: " << num1 / num2;
            else
                cout << "Tidak bisa melakukan pembagian dengan nol";
            break;
        default:
            // Operator yang dimasukkan tidak valid
            cout << "Operator yang dimasukkan tidak valid";
            break;
    }

    return 0;
}